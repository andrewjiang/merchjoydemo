
	<div id="store-profile-form">
		<br>
		<div class="container">
			<center>
				<h1>Create your <span class="instacase-brand">MerchJoy</span> store</h1>
			</center>
			<br>
			<div class="well">
				<div class="row">
					<div class="col-md-8 col-md-offset-2">

							<%= form_for(@store) do |f| %>
							  <% if @store.errors.any? %>
							    <div id="error_explanation">
							      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

							      <ul>
							      <% @store.errors.full_messages.each do |msg| %>
							        <li><%= msg %></li>
							      <% end %>
							      </ul>
							    </div>
							  <% end %>

						  <div class="form-group">
						    <label for="storeNameInput">Store Name</label>
						    <div class="row">
							    <div class="col-xs-6">
							    	<%= f.text_field :name, :class=>"form-control", :id=>"storeNameInput", :placeholder=>"storename" %>
								  </div>
								  <div class="col-xs-6">
								  	<span style="background-color:transparent; border: none; box-shadow:none; padding-left:0; margin-left:-15px;" class="form-control">
									  	.merchjoy.com
									  </span>
								  </div>
								 </div>
						  </div>
						  <div class="form-group">
						    <label for="storeTitleInput">Store Title</label>
						    <div class="row">
							    <div class="col-xs-6">
							    	<%= f.text_field :title, :class=>"form-control", :id=>"storeTitleInput", :placeholder=>"My MerchJoy Store" %>
						    	</div>
						    </div>
						  </div>
						  <div class="form-group">
						    <label for="storeLogo">Store Logo Image</label>
						    <div class="row">
						    	<div class="col-xs-6">
								    <input type="file" id="storeLogo">

								    <p class="help-block">200px by 200px image that goes into your store header</p>

								    <%= f.text_area :logo, :class=>"hidden", :id=>"store-logo" %>
								    <%= f.text_area :session, :class=>"hidden", :id=>"store-session", :value=> request.session_options[:id] %>
								  </div>
								  <div class="col-xs-6">
								  	<img id="uploaded-img" />
								  </div>
						  </div>
						  <div class="form-group">
						    <label for="storeThene">Choose Store Theme</label>
						    <div class="row">
						    	<div class="col-xs-6">
								    <select id="font-selector" class="form-control">
											<option>MerchJoy Default</option>
											<option>Daylight</option>
											<option>Nightfall</option>
											<option>Blue Sky</option>
											<option>Landscape</option>
											<option>War Zone</option>							
											<option>Villager</option>
											<option>Custom</option>
										</select>
								  </div>
						  </div>
						  <div class="checkbox">
						    <label>
						      <input type="checkbox"> Import products from existing stores
						    </label>
						  </div>
						  	<button class="btn btn-info pull-right" >Create Store
						  	</button>
						  	<%= f.submit "Create New Store", :id=>"submitStore", :class=>"btn btn-primary btn-lg hidden"  %>
						<% end %>
					</div>			
				</div>
			</div>
		</div>
	</div>
